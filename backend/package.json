{
  "name": "home-display",
  "version": "0.0.1",
  "description": "Web app for our home display, to show pictures and videos.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./bin/www",
    "lint": "lint-staged",
    "lint-all": "pretty-quick && eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "eslint --fix"
    ],
    "*.+(json|css|md)": [
      "pretty-quick --staged"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateusk/home-display.git"
  },
  "keywords": [
    "nodejs",
    "vuejs"
  ],
  "author": "Mateus Knelsen <hello@mateus.works>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mateusk/home-display/issues"
  },
  "homepage": "https://github.com/mateusk/home-display#readme",
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "http-errors": "^1.7.2",
    "mongoose": "^5.11.8",
    "mongoose-paginate-v2": "^1.3.13",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "require-dir": "^1.2.0"
  },
  "devDependencies": {
    "connect-livereload": "^0.6.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "livereload": "^0.9.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.1"
  }
}
